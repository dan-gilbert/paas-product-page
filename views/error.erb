<% content_for :head do %>
	<title>Error - <%= settings.title %></title>
<% end %>


<div class="masthead">
	<nav class="breadcrumbs breadcrumbs--inverse" aria-label="Breadcrumbs">
		<ol itemscope itemtype="http://schema.org/BreadcrumbList">
			<li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
				<a href="https://www.gov.uk/service-toolkit#components" itemprop="item"><span itemprop="name">Components</span></a>
			</li>
			<li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
				<a href="/" itemprop="item"><span itemprop="name">GOV.UK PaaS</span></a>
			</li>
			<li class="breadcrumbs__item breadcrumbs__item--active" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
				<a href="#main" itemprop="item"><span itemprop="name">Not found</span></a>
			</li>
		</ol>
	</nav>

	<div class="hero hero--breaded">
		<div class="hero__content">
			<div class="hero__body">
				<h1 class="hero__title">Unexpected Error</h1>
				<div class="hero__inline-image">
				</div>
				<p class="hero__description">
					Sorry there was an error while processing your request
				</p>
			</div>
			<div class="hero__aside-image">
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="grid-row">
		<div class="column-two-thirds">
			<h1>Sorry there was an error processing the request</h1>
			<h1 class="heading-xlarge">We were unable to process the page as expected.</h1>
			<p>
				<%= @error %>
			</p>
		</div>
	</div>
</div>
